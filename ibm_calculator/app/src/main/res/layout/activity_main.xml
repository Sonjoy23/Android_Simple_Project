<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:background="#00BCD4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="IBM Calculator"
        android:gravity="center"
        android:textSize="40sp"
        />

    <TextView
        android:id="@+id/text_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:text="Result"
        android:textSize="20sp"
        android:background="#CDDC39"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="100dp"
        android:layout_height="wrap_content">


        <EditText
            android:id="@+id/weight_id"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:ems="15"
            android:layout_gravity="center"
            android:hint="Enter Your Weight"
            android:gravity="center"
            android:textSize="15sp"
            android:background="#B7D0CB"
            android:inputType="number"

            />
        <EditText
            android:id="@+id/heightFt_id"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:ems="15"
            android:layout_gravity="center"
            android:hint="Enter Your Height(Ft)"
            android:gravity="center"
            android:textSize="15sp"
            android:inputType="number"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="#B7D0CB"
            />
        <EditText
            android:id="@+id/hightIn_id"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:ems="15"
            android:layout_gravity="center"
            android:hint="Enter Your height(In)"
            android:gravity="center"
            android:textSize="15sp"
            android:inputType="number"
            android:background="#B7D0CB"
            />
        <Button
            android:id="@+id/button_id"
            android:text="Calculate IBM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#FF9800"
            />

    </LinearLayout>


</LinearLayout>
